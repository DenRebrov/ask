<%# Главная страница приложения %>

<div class="content-wrapper buffer-both text-center">
  <div class="buffer-both">
    <h1 class="title-medium">Наши пользователи</h1>
  </div>

  <%# Выводим ссылки-иконки всех пользователей и их имена %>
  <% @users.each do |user| %>
    <div class="users-list-item">
      <div class="user-title">
        <%= user.username %>
      </div>

      <div class="user-image-div user-image-div-small">
        <%= link_to image_tag(user_avatar(user), class: 'user-image'), user_path(user) %>
      </div>
    </div>
  <% end %>
</div>

<div class="content-wrapper buffer-both text-center">
  <h1 class="title-medium">Наши хэштеги</h1>
  <% all_hashtags = [] %>

  <%# Пробегаемся по всем вопросам и собираем в массив all_hashtags все хэштеги из вопросов %>
  <% @all_questions.each do |q| %>
    <% q.hashtags.each do |h| %>
      <% all_hashtags << h %>
      <% all_hashtags.uniq! %>
    <% end %>
  <% end %>

  <%# Выводим ссылки всех хэштегов %>
  <div class="text-hashtag">
    <% all_hashtags.each do |h| %>
      <%= link_to h.name, hashtag_path(h) %>
    <% end %>
  </div>
</div>
